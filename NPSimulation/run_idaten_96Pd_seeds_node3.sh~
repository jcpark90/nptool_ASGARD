#!/bin/bash

for seed in $(seq 1029 1 1042)
do
    sed "s/SEED/$seed/g;" idaten_1M_events_template.mac > idaten_96Pd_${seed}.mac
    npsimulation -D IDATEN_HPGe_MaCi_commissioning.detector -E 96Pd_isomer.source -B idaten_96Pd_${seed}.mac -O idaten_commissioning_96Pd_${seed}
    mv /home/jcpark/nptool/Outputs/Simulation/idaten_commissioning_96Pd_${seed}.root /media/jcpark/t7_shield/idaten/
    rm idaten_96Pd_${seed}.mac
done

    
